@import './font.wxss';

.iconfont{
  font-family:"iconfont" !important;
  font-size:16px;font-style:normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}

.container {
  font-size: 12px;
  padding: 20px 10px;
  color: #ffffff;
  background-color: #4b9071;
  overflow-x: hidden;
}
navigator {
  font-size: 13px;
  text-align: left;
  width: 100%;
}
navigator .iconfont {
  font-size: 12px;
}
.today-base-info {
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 40px;
  margin-bottom: 20px;
}
.today-base-info .temp {
  font-size: 30px;
  padding-right: 10px;
}
.today-base-info p {
  margin: 0;
}
.today-base-info span {
  margin-left: 20px;
}
swiper {
  width: 90%;
  min-height: 170px;
  border: 2px solid #438869;
  border-radius: 20px;
  padding: 10px;
}
swiper-item {
  height: auto !important;
  text-align: center;
  padding: 20px 0;
  position: relative;
}
swiper-item .iconfont {
  font-size: 30px;
  display: block;
  margin: 10px 0;
}
.today-bg {
  background-color: #3d7c5d;
  border-radius: 40px;
}
.today-bg .week-day {
  background-color: #4b9071;
}
.week-day {
  /* display: inline-block; */
  padding: 0 10px;
  border-radius: 10px;
  background-color: #47886a;
}
.swiper-box {
  position: relative;
  width: 100%;
}
.dots {
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 15px;
  height: 10px;
  text-align: center;
}
.dot {
  height: 4px;
  width: 4px;
  border-radius: 4px;
  background-color: #3d7c5d;
  display:inline-block;
  margin:0 5px;
}
.dot.active {
  background-color: #ffffff;
}
.canvas-box {
  width: 100%;
  background-color: #4b9071;
  padding-bottom: 50px;
}
canvas {
  margin: 0 auto;
  /* border-left: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff; */
  background-color: #ffffff;
}
